<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!--Favicons-->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!--IE 10 Metro Tile Icon-->
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="msapplication-TileImage" content="/images/tango-applications-internet-144-35389.png">

    <!--iOS e Android -->
    <link rel="apple-touch-icon-precomposed" href="/images/tango-applications-internet-152-35389.png">

    <!--Everything Else Icons-->
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/images/tango-applications-internet-152-35389.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/images/tango-applications-internet-144-35389.png" />
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/images/tango-applications-internet-120-35389.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/images/tango-applications-internet-114-35389.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/images/tango-applications-internet-72-35389.png" />
    <link rel="apple-touch-icon-precomposed" href="/images/tango-applications-internet-57-35389.png" />
    <link rel="icon" href="/images/tango-applications-internet-32-35389.png" sizes="32x32" />
    <!--End Favicons-->
    <!--Stylesheets-->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" />
    <link href="/stylesheets/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="/stylesheets/custom.css" rel="stylesheet" />
    <link href="/stylesheets/style.css" rel="stylesheet" />
    <link href="/stylesheets/form-login.css" rel="stylesheet" />

    <!--Javascripts-->
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="/javascripts/metisMenu.min.js"></script>
    <script src="/javascripts/custom.js"></script>
    <script src="/javascripts/scripts.js"></script>
    <script src="/javascripts/jquery.maskedinput.js"></script>
    <script src="/javascripts/jquery.maskedinput.min.js"></script>

    <title>{{#if title}}{{title}}{{/if}} | Sistema Alarme</title>
</head>
<body>
    {{#if user}}
    <!--BEGIN NAV BAR-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span><span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button> <a class="navbar-brand" href="/">SGRA</a>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/users/help">Informações</a>
                            </li>
                            <li>
                                <a href="/users/about">Sobre</a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Veículos<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    {{#each veiculos}}
                                    <li class="dropdown-li">
                                        <div class="dropdown-div">
                                            <a href="/veiculos/{{placa}}">
                                                <span>{{placa}}</span>
                                            </a>
                                        </div>
                                    </li>
                                    {{/each}}
                                    <li class="dropdown-li">
                                        <form  method="get" action="/veiculos/create">
                                            <button type="submit" class="btn btn-primary btn-xs">
                                                Novo
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{user.nome}}<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/users/update">Atualizar Dados</a>
                                    </li>
                                    <li>
                                        <a href="/users/delete">Excluir Conta</a>
                                    </li>
                                    <li class="divider">
                                    </li>
                                    <li>
                                        <a href="/users/logout">Logout</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!--END NAV BAR-->
    <!--START SIDE BAR-->
    <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu">
                <li>
                    <a href="#">Veículos<span id="dropdown-icon" class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></a>
                    <ul class="nav nav-second-level">
                        {{#each veiculos}}
                        <li>
                            <div id="veiculo-atual">
                                <a href="/veiculos/{{placa}}">
                                    <span class="placa">{{placa}}</span> &nbsp;&nbsp;{{marca}}
                                </a>
                            </div>
                        </li>
                        {{/each}}
                        <li>
                            <form name="novoVeiculo" id="novoVeiculo" method="get" action="/veiculos/create">
                                <button type="submit" class="btn btn-primary btn-xs" id="btnAdicionarVeiculo">
                                    Adicionar Novo Veículo
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <!--END SIDE BAR-->
    <div id="page-wrapper">
        <div class="jumbotron">
            {{{body}}}
        </div>
    </div>
    {{else}}
    <div class=" jumbotron form-login-div">
        {{{body}}}
    </div>
    {{/if}}
</body>
</html>
