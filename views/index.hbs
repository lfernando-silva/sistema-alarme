<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h2 class="text-center">SGRA - Login</h2>
            <div class="account-wall panel">
                <picture id="conectado" class="car-info text-primary text-center">
                    <img class="profile-img" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" alt="Usuário" />
                </picture>
                <form class="form-signin" method="post" action="/users/login">
                    <input type="text" id="email" name="email" maxlength="40" required class="form-control"value="E-mail" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'E-mail';}">
                    <input type="password" id="password" name="password" class="form-control" value="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}"  >
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Entrar
                    </button>
                    {{#if error}}
                    <div style="color:red;">{{error}}</div>
                    {{/if}}
                    <label class="checkbox pull-left">
                        <input type="checkbox" value="remember-me">
                        Lembrar
                    </label>
                    <a href="#" class="pull-right need-help">Esqueci a senha </a><span class="clearfix"></span>
                </form>
                <a href="users/create" class="text-center new-account">Cadastre-se</a>
            </div>
        </div>
    </div>
</div>