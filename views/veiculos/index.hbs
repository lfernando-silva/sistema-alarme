    <div class="container-fluid">
        {{#each veiculos}}
        <fieldset>
            <div class="row jumbotron" id="divVeiculos">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="text-primary text-center">
                                <strong>{{marca}}</strong>
                            </h2>
                            <picture>
                                <img id="veiculo" alt="Carro" srcset="../images/carro.jpg 3x" class="img-thumbnail" />
                            </picture>
                            
                            <form name="aciona" id="aciona" method="get" action="/veiculos/aciona/d-{{dispositivo.numeroSerie}}_{{dispositivo.ativacoes.[0].status}}">
                                <button type="submit" class="btn btn-success btn-lg btn-block">
                                    ACIONAR ALARME!
                                </button>
                            </form>
                            <form name="excluirVeiculo" id="excluirVeiculo" method="get" action="/veiculos/excluir/{{placa}}">
                                <button type="submit" class="btn btn-danger btn-lg btn-block">
                                    Remover Veículo
                                </button>
                            </form>
                        </div>

                    </div>
                    <dl class="dl-horizontal">
                        <dt>
                            Marca
                        </dt>
                        <dd>
                            {{marca}}
                        </dd>
                        <dt>
                            Placa
                        </dt>
                        <dd>
                            {{placa}}
                        </dd>
                        <dt>
                            Cor
                        </dt>
                        <dd>
                            {{cor}}
                        </dd>
                        <dt>
                            Última Alteração
                        </dt>
                        <dd>
                            {{dispositivo.ativacoes.[0].data}} às {{dispositivo.ativacoes.[0].horario}}
                        </dd>
                    </dl>
                    <h1 style="color:red;" class="text-center">
                        Alarme {{dispositivo.ativacoes.[0].status}}
                    </h1>
                </div>
            </div>
        </fieldset>
        {{/each}}
        <div class="row">
            <div class="col-md-12">
                <form name="novoVeiculo" id="novoVeiculo" method="get" action="/veiculos/create">
                    <button type="submit" class="btn btn-primary btn-block btn-lg" id="btnAdicionarVeiculo">
                        Adicionar Novo Veículo
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
