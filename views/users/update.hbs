<fieldset>
    <div class="jumbotron divJumbotron">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form role="form" method="post" novalidate>
                        <div class="form-group">

                            <label for="email">
                                Email
                            </label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="E-mail (até 40 caracteres)" maxlength="40" required value="{{email}}" />
                        </div>
                        <div class="form-group">
                            <label for="nome">
                                Nome
                            </label>
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome (até 40 caracteres)" maxlength="40" required value="{{nome}}" />
                        </div>
                        <div class="form-group">
                            <label for="cpf">
                                CPF
                            </label>
                            <input type="text" class="form-control" id="cpf" name="cpf" placeholder="CPF (apenas números)" maxlength="15" required value="{{cpf}}" />
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password
                            </label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password (até 8 caracteres)" maxlength="8" autocomplete="off" required />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Atualizar
                        </button>
                        <br /><br /><a href="/">Voltar</a>
                        <span style="color:red;">{{error}}</span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</fieldset>
<script>
    jQuery(function ($) {
        $("#cpf").mask("999.999.999-99");
    });
</script>