<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="info">
                <span class="help-li glyphicon glyphicon-cog" aria-hidden="true"></span>Criar Conta
            </h4>
        </div>
        <div id="cadastro" class="panel-body">
            <form method="post">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">E-mail</span>
                    <input type="email" class="form-control" id="email" name="email" maxlength="40" required placeholder="E-mail (até 40 caracteres)" value="{{input.email}}" aria-describedby="basic-addon1">
                </div>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon2">Nome</span>
                    <input type="text" class="form-control" id="nome" name="nome" maxlength="40" required placeholder="Nome (até 40 caracteres)" value="{{input.nome}}" onblur="formatNome(this.id)" aria-describedby="basic-addon2">
                </div>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon3">CPF</span>
                    <input type="text" class="form-control" id="cpf" name="cpf" maxlength="14" required placeholder="CPF (apenas números)" onfocus="formatCpf()" value="{{input.cpf}}" aria-describedby="basic-addon3">
                </div>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon4">Senha (8 Caracteres)</span>
                    <input type="password" class="form-control" id="password" name="password" maxlength="8" placeholder="Senha (8 caracteres)" autocomplete="off" required aria-describedby="basic-addon4">
                </div>
                <div class="btn">
                    <button type="button" id="acionar" class="btn btn-md btn-default">
                        <a href="/">Voltar</a>
                    </button>
                    <button type="submit" id="acionar" class="btn btn-md btn-success">
                        Criar Conta
                    </button>
                    {{#if error}}
                    <div style="color:red;">{{error}}</div>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</div>
