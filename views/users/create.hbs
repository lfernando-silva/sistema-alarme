<fieldset>
    <div class="jumbotron">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form role="form" method="post" novalidate>
                        <div class="form-group">
                            <label for="email">
                                Email
                            </label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" required value="{{input.email}}" />
                        </div>
                        <div class="form-group">
                            <label for="nome">
                                Nome
                            </label>
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" required value="{{input.nome}}" />
                        </div>
                        <div class="form-group">
                            <label for="cpf">
                                CPF
                            </label>
                            <input type="text" class="form-control" id="cpf" name="cpf" placeholder="CPF" required value="{{input.cpf}}" />
                        </div>
                        <div class="form-group">

                            <label for="password">
                                Password
                            </label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" autocomplete="off" required />
                        </div>
                        <button type="submit" class="btn btn-default">
                            Criar!
                        </button>
                        <a href="/">Voltar</a>
                        <span style="color:red;">{{error}}</span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</fieldset>
